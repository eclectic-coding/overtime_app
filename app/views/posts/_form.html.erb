<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notifications", sticky: false) %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rationale %>
    <%= f.text_field :rationale, class: "form-control" %>
  </div>
  <%= f.submit 'Save', class: "btm btn-primary" %>
<% end %>